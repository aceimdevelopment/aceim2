#transferForm{style: 'display:none'}
  .form-group.row.px-3
    = f.label :created_at, class: 'col-sm-5 control-label', value: 'Fecha de Transacción:', style: 'text-align: right'
    .col-sm-5.my-1
      .input-group
        .input-group-prepend
          .input-group-text
            %span.fa.fa-calendar
        = f.date_field :created_at, class: 'form-control ', required: true, value: Date.today

  .form-group.row.px-3
    = f.label :transaction_number, class: 'col-sm-5 control-label', value: 'Número de Transacción:', style: 'text-align: right', id: :transNumberLabel

    .col-sm-5.my-1
      .input-group
        .input-group-prepend
          .input-group-text
            %span.fa.fa-barcode
        = f.text_field :transaction_number, class: 'form-control onlyNumbers', required: true

  .form-group.row.px-3
    = f.label :value, class: 'col-sm-5 control-label', value: 'Monto:', style: 'text-align: right'

    .col-sm-5.my-1
      .input-group
        .input-group-prepend
          .input-group-text
            %span.fa.fa-money
        = text_field_tag nil, number_to_currency(@academic_record.agreement.value, :unit => "Bs.", :separator => ",", :delimiter => "."), class: 'form-control onlyNumbers', readonly: true, disabled: true
        
        .input-group-append
          .input-group-text
            (o equivalente en divisas) 

  #banksData
    .form-group.row.px-3
      = f.label :source_bank_id, class: 'col-sm-5 control-label', value: 'Banco Origen:', style: 'text-align: right'
      .col-sm-5.my-1
        .input-group
          .input-group-prepend
            .input-group-text
              %span.fa.fa-bank
          = f.collection_select :source_bank_id, Bank.where('id != 0000'), :id, :name, {prompt: "-- Seleccione Banco Origen --"}, {class: 'form-control', id: 'bank', required: true}
    .form-group.row.px-3
      = f.label :bank_account_id, class: 'col-sm-5 control-label', value: 'Cuenta Destino:', style: 'text-align: right'
      .col-sm-5.my-1
        .input-group
          .input-group-prepend
            .input-group-text
              %span.fa.fa-graduation-cap
          = f.collection_select :bank_account_id, BankAccount.all, :id, :name, {}, {class: 'form-control', readonly: true}

  .form-group.row.px-3
    = f.label :file_field, class: 'col-sm-5 control-label', value: 'Archivo de respaldo:', style: 'text-align: right', id: 'fileField'
    .col-sm-5.my-1
      .input-group
        .input-group-prepend
          .input-group-text{style: 'padding: 0px 16px 0px 16px;'}
            %span.fa.fa-file-image-o
        =# f.file_field 'url_file', {class: 'btn btn-sm btn-secondary form-control form-control-file', required: true, accept: "image/*,*.pdf"}
        = f.file_field 'backup_file', {class: 'btn btn-sm btn-secondary form-control form-control-file', required: true, accept: "image/jpeg,image/jpg,image/png,application/pdf"}
      .text-muted= "Solo se perimiten archivos de los tipo: jpg, jpeg, png y pdf"
