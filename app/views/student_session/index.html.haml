- if @user.student.payment_details and @user.student.payment_details.unread_report.any?

  - @payment_detail = @user.student.payment_details.unread_report.first
  - content = render partial: '/payment_details/message_payment_report' 
  = render partial: '/layouts/modal_alert', locals: {content: content, id: @payment_detail.id, url: read_report_payment_detail_path(@payment_detail.id)}

- if @user.id.eql? current_user.id and (@user.any_blank? or @user.sign_in_count.eql? 0)

  - @user = @user
  - content = render partial: '/users/form'
  - title = "Datos Personales"
  - msg = "<strong>Atención</strong>: Por favor, actualiza tus datos personales"
  - msg2 = "<strong>Los datos suministrados en el siguiente formulario serán usados para tu cuenta de Canvas</strong>"
  - id = "updatePersonalData"
  = render partial: '/layouts/modal', locals: {content: content, id: id, msg: msg, title: title, msg2: msg2 }


- if (!@user.id.eql? current_user.id) and @user.student? # session[:admin] 
  .border.border-danger
    .p-3.bg-danger.text-white.text-center
      Vista Estudante
      = link_to "/admin/student/#{@user.id}", class: 'tooltip-btn btn btn-sm btn-primary float-right', title: 'Salir de Vista Estudiante', placement: 'left' do
        %span.fa.fa-times
        Salir
    .p-2
      = render 'academic_details'
- else
  %br
  = render 'academic_details'
