- total = @period.academic_records.preinscrito.reject{ |ar| ar.payment_detail}.map{ |ar| ar.id }.count
 
- if @period.enrollment?
	- msg = "Para habilitar el botón por favor cierre las inscripciones"
- elsif (total.eql? 0)
	- msg = "Sin reportes por eliminar"
- else
	- msg = "Remover #{total} registros de preinscritos sin reporte de pago"

.container-fluid.middle-box.loginscreen.animated.fadeInDown.mt-4
	= link_to 'Atrás', "/admin/period/#{@period.id}", class: 'btn btn-sm btn-secondary'

	- if false
		%b.tooltip-btn{'data-toggle': :tooltip, title: msg}
			= link_to "/periods/#{@period.id}/clean_not_reported", class: "btn btn-sm btn-danger", disabled: (@period.enrollment? or total.eql? 0), 'data-confirm': "Esta acción es irreversible y eliminará #{total} registros de inscripciones ¿Está completamente seguro?"  do
				.fa.fa-trash 
				Remover Preinscritos Sin Reportar

	%b.tooltip-btn{'data-toggle': :tooltip, title: 'Enviar Correo a usuarios Sin Reporte'}
		= link_to "javascript:void(0)", class: "btn btn-sm btn-success"  do
			.fa.fa-mail
			Enviar Correo

	%table.table.table-sm.border.mt-4
		%thead
			%tr
				%th Nombre
				%th CI
				%th Correo
				%th Idioma
				%th Nivel
		%tbody
			- @unreported.each do |ar| 
				%tr
					%td= ar.student.user.full_name_invert
					%td= ar.student.ci
					%td= ar.user.email
					%td= ar.language.name
					%td= ar.level.name