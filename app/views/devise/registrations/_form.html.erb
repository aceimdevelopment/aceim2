<h3>¡Registrate!</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "Correo Electrónico", class: 'form-control input-login', style: 'width: 300px;'  %>
    </div>

    <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
    <% end %>
    <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Contraseña', class: 'form-control input-login' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirma Contraseña', class: 'form-control input-login' %>
    </div>
    <%= hidden_field_tag :student, true %>
    <button type="submit" class="btn btn-primary block full-width m-b">Completar Registro</button>
    ó 
    <%= render "devise/shared/links" %>
<% end -%>
