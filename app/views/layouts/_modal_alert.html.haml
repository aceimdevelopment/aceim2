.modal.fade{'aria-hidden': false, 'aria-labelledby': 'updateModalLabel', id: id}
  .modal-dialog.modal-lg
    .modal-content
      .alert.alert-danger.text-center
        %h3= title
      .modal-body.text-justify#content
        = content
      .modal-footer.float-center
        = link_to 'Aceptar', url, class: 'btn btn-primary btn-block', id: 'confirmLink'
